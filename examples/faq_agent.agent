config:
   agent_name: "faq_agent"
   agent_label: "FAQ Agent"
   description: "A simple FAQ agent that answers common questions about business hours, contact info, and product features"
   default_agent_user: "agent@yourorg.com"

variables:
   question_category: mutable string = ""
   questions_answered: mutable number = 0

system:
   messages:
      welcome: "Hello! I'm your FAQ assistant. I can help you with questions about our business hours, contact information, and product features."
      error: "I apologize, but I encountered an issue. Please try asking your question again."
   instructions: |
      You are a friendly and helpful FAQ assistant.
      Answer questions concisely and accurately.
      If you don't know the answer, politely say so and offer to connect the user with a human agent.

start_agent entry:
   description: "Entry point - routes users to FAQ topics"
   reasoning:
      instructions: |
         Welcome the user and ask how you can help them today.
         Listen to their question and route them to the appropriate topic.
      actions:
         ask_hours: @utils.transition to @topic.business_hours
            description: "User wants to know about business hours or availability"

         ask_contact: @utils.transition to @topic.contact_info
            description: "User wants contact information like email, phone, or address"

         ask_products: @utils.transition to @topic.product_info
            description: "User wants to know about products, features, or pricing"

topic business_hours:
   description: "Handles questions about business hours and availability"
   reasoning:
      instructions: ->
         set @variables.question_category = "hours"
         set @variables.questions_answered = @variables.questions_answered + 1

         | **Business Hours**
         | We are open Monday through Friday, 9:00 AM to 5:00 PM Pacific Time.
         |
         | **Holiday Schedule**
         | We are closed on major US holidays including New Year's Day, Memorial Day,
         | Independence Day, Labor Day, Thanksgiving, and Christmas.
         |
         | **After-Hours Support**
         | For urgent matters outside business hours, please email support@example.com
         | and we'll respond within 24 hours.
         |
         | Is there anything else I can help you with?
      actions:
         back_to_main: @utils.transition to @topic.main_menu
            description: "User wants to ask about something else"

topic contact_info:
   description: "Provides contact information and support channels"
   reasoning:
      instructions: ->
         set @variables.question_category = "contact"
         set @variables.questions_answered = @variables.questions_answered + 1

         | **Contact Information**
         |
         | **Email:** support@example.com
         | **Phone:** 1-800-EXAMPLE (1-800-392-6753)
         | **Address:** 123 Main Street, San Francisco, CA 94102
         |
         | **Response Times**
         | - Email: Within 24 hours
         | - Phone: Immediate during business hours
         |
         | **Social Media**
         | - Twitter: @ExampleSupport
         | - LinkedIn: /company/example
         |
         | Would you like help with anything else?
      actions:
         back_to_main: @utils.transition to @topic.main_menu
            description: "User wants to ask about something else"

topic product_info:
   description: "Answers questions about products, features, and pricing"
   reasoning:
      instructions: ->
         set @variables.question_category = "products"
         set @variables.questions_answered = @variables.questions_answered + 1

         | **Product Features**
         | Our platform includes:
         | - Real-time analytics dashboard
         | - API access for integrations
         | - 24/7 customer support
         | - Custom reporting tools
         | - Team collaboration features
         |
         | **Pricing**
         | - Starter: $29/month (up to 5 users)
         | - Professional: $79/month (up to 25 users)
         | - Enterprise: Custom pricing (unlimited users)
         |
         | Visit example.com/pricing for detailed plan comparisons.
         |
         | Do you have any other questions?
      actions:
         back_to_main: @utils.transition to @topic.main_menu
            description: "User wants to ask about something else"

topic main_menu:
   description: "Main menu for returning users to ask additional questions"
   reasoning:
      instructions: ->
         | Great! What else would you like to know about?
         | I can help with business hours, contact information, or product details.
      actions:
         ask_hours: @utils.transition to @topic.business_hours
            description: "User wants to know about business hours"

         ask_contact: @utils.transition to @topic.contact_info
            description: "User wants contact information"

         ask_products: @utils.transition to @topic.product_info
            description: "User wants product information"
