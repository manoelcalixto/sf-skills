# Val_Topic_Transitions - Tests topic transition patterns
# Purpose: Verify @utils.transition works as documented
#
# Tests:
#   ✓ @utils.transition to @topic.X (permanent handoff)
#   ✓ Multiple topic definitions
#   ✓ Transition from one topic to another
#
# SKILL.md Section: Transition vs Delegation, Topic Transitions

system:
   messages:
      welcome: "Topic transition validation ready."
      error: "Topic transition error."
   instructions: "This agent tests topic transitions."

config:
   agent_name: "Val_Topic_Transitions"
   agent_label: "Validation: Topic Transitions"
   description: "Tests @utils.transition permanent handoffs"
   default_agent_user: "home_furnishing_agent@00dvz000004evdp1379858245.ext"

topic step_one:
   description: "First step in transition chain"
   reasoning:
      instructions: |
         You are in step one. Transition to step two.
      actions:
         next: @utils.transition to @topic.step_two
            description: "Transition to step two"

topic step_two:
   description: "Second step in transition chain"
   reasoning:
      instructions: |
         You are in step two. Transition to final step.
      actions:
         next: @utils.transition to @topic.done
            description: "Transition to done"

topic done:
   description: "Final step - validation complete"
   reasoning:
      instructions: |
         Topic transition validation successful.
         All transitions worked correctly.

start_agent entry:
   description: "Entry point"
   reasoning:
      instructions: |
         Start topic transition validation.
      actions:
         begin: @utils.transition to @topic.step_one
            description: "Begin transition tests"
