# Val_Comparison_Ops - Tests comparison operators
# Purpose: Verify comparison operators work as documented
#
# Tests:
#   ✓ Equal: ==
#   ✓ Not equal: !=
#   ✓ Less than: <
#   ✓ Less than or equal: <=
#   ✓ Greater than: >
#   ✓ Greater than or equal: >=
#   ✓ Logical: and, or, not
#
# SKILL.md Section: Expression Operators

system:
   messages:
      welcome: "Comparison validation ready."
      error: "Comparison operation failed."
   instructions: "This agent tests comparison operators."

config:
   agent_name: "Val_Comparison_Ops"
   agent_label: "Validation: Comparison Operators"
   description: "Tests comparison and logical operators"
   default_agent_user: "home_furnishing_agent@00dvz000004evdp1379858245.ext"

variables:
   score: mutable number = 50
   verified: mutable boolean = True
   status: mutable string = "active"

topic test_comparisons:
   description: "Test comparison operations"
   reasoning:
      instructions: ->
         # Test equality
         if @variables.score == 50:
            | Score equals 50

         # Test not equal
         if @variables.score != 100:
            | Score is not 100

         # Test less than
         if @variables.score < 100:
            | Score is less than 100

         # Test less than or equal
         if @variables.score <= 50:
            | Score is less than or equal to 50

         # Test greater than
         if @variables.score > 0:
            | Score is greater than 0

         # Test greater than or equal
         if @variables.score >= 50:
            | Score is greater than or equal to 50

         # Test logical AND
         if @variables.verified == True and @variables.score > 0:
            | Verified and positive score

         # Test logical OR
         if @variables.score == 100 or @variables.verified == True:
            | Either max score or verified

         # Test logical NOT
         if not @variables.score == 0:
            | Score is not zero
      actions:
         complete: @utils.transition to @topic.done
            description: "Complete comparison test"

topic done:
   description: "Validation complete"
   reasoning:
      instructions: |
         All comparison operators validated successfully.

start_agent entry:
   description: "Entry point"
   reasoning:
      instructions: |
         Start comparison validation.
      actions:
         begin: @utils.transition to @topic.test_comparisons
            description: "Begin comparison tests"
